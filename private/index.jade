        script(src="js/jquery-3.1.1.js")
        script(src="js/bootstrap.js")
        script(src="js/flowtype.js")
        script.
            $( document ).ready(function() {
                $('.main_text').flowtype({
                    minFont   : 12,
                    maxFont   : 80,
                    fontRatio : 10
                });

                $('.blinds').flowtype({
                    minFont   : 12,
                    maxFont   : 18,
                    fontRatio : 13
                });
                

                if($(window).width() <= '768')
                    {
                        $('header .main_text').css({'margin-top':'70px'});
                        $('header .blinds').css({'margin-top':'-80px'});
                    }

                if($(window).width() > '768')
                {
                    $('header .main_text').css({'margin-top':'150px'});
                    $('header .blinds').css({'margin-top':'inherit'});
                }


                $(window).resize(function(){
                    if($(window).width() <= '768')
                    {
                        $('header .main_text').css({'margin-top':'70px'});
                        $('header .blinds').css({'margin-top':'-80px'});
                    }

                    if($(window).width() > '768')
                    {
                        $('header .main_text').css({'margin-top':'150px'});
                        $('header .blinds').css({'margin-top':'inherit'});
                    }
                });
                


            });

            

        
        
